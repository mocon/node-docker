{
  "name": "node-docker",
  "version": "1.0.0",
  "description": "Testing Node.js in a Docker container",
  "main": "dist/index.js",
  "engines": {
    "node": ">=8.6.0"
  },
  "author": "Myles O'Connor <hello@myles.la>",
  "license": "MIT",
  "dependencies": {
    "express": "4.16.0",
    "node-fetch": "1.7.3"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.0",
    "eslint": "4.7.2",
    "nodemon": "1.12.1"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "docker-build": "docker build -t node-docker .",
    "docker-run": "docker run -p 8000:8000 node-docker",
    "clean": "rm -rf node_modules && yarn cache clean && yarn"
  }
}
